# Base42 Backend Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# 42 API Configuration (Required)
# Get these from: https://profile.intra.42.fr/oauth/applications
API_UID=your_42_api_uid
API_SECRET=your_42_api_secret
REDIRECT_URI=http://localhost:3000/auth/callback

# Database Configuration
# For Docker: use 'postgres' as host
# For local development: use 'localhost'
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres123
DB_NAME=base42

# Redis Configuration  
# For Docker: use 'redis' as host
# For local development: use 'localhost'
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
